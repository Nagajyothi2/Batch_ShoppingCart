@using ShoppingCart1.View_Models
@model ProductVM

<div class="card shadow border-0 mt-4">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-black py-2">Create Product</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                <input asp-for="Product.Title" class="form-control border-0 shadow" />
                <lable asp-for="Product.Title" class="control-label ms-2">Product Title</lable>
                <span asp-validation-for="Product.Title" class="text-danger"></span>
            </div>
            <div class="border p-3">
                <input asp-for="Product.Description" class="form-control border-0 shadow" />
                <lable asp-for="Product.Description" class="control-label ms-2">Product Description</lable>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="border p-3">
                <input asp-for="Product.Author" class="form-control border-0 shadow" />
                <lable asp-for="Product.Author" class="control-label ms-2">Author</lable>
                <span asp-validation-for="Product.Author" class="text-danger"></span>
            </div>
            <div class="border p-3">
                <input asp-for="Product.ISBN" class="form-control border-0 shadow" />
                <lable asp-for="Product.ISBN" class="control-label ms-2">ISBN</lable>
                <span asp-validation-for="Product.ISBN" class="text-danger"></span>
            </div>
            <div class="border p-3">
                <input asp-for="Product.Price" class="form-control border-0 shadow" type="number" />
                <lable asp-for="Product.Price" class="control-label ms-2">Price</lable>
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="border p-3">
                <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList"></select>
                <option disabled selected>--Select Category--</option>
            </div>
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="Submit" class="btn btn-primary form-control"> Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>


